# Database Configuration
PGHOST=your_postgresql_host
PGPORT=5432
PGDATABASE=your_database_name
PGUSER=your_database_user
PGPASSWORD=your_database_password

# JWT Secret - CRITICAL! Generate using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use default value in production!
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET_MINIMUM_64_CHARS

# Email Configuration (for password reset emails)
# For Gmail use App Password, not regular password
# Guide: https://support.google.com/accounts/answer/185833

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Your Platform Name" <your-email@gmail.com>


# Application URL (for email links)
APP_URL=http://localhost:5000

# Node Environment
NODE_ENV=production